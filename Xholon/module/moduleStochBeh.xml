// Step 0
xh.StochasticBehavior.test("qwerty");

// Step 1
const constants01 = {
DEFAULT_MAX_LEVELS: 1,
DEFAULT_NAME_TEMPLATE: "R^^^^^",
DEFAULT_DB_NAME: "IslandMobDB",
DEFAULT_DB_STORE_NAME: "mobrole", // "mobrole" "mobrolent1"
