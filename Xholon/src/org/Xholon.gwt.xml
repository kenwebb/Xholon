<?xml version="1.0" encoding="UTF-8"?>
<!--
  When updating your version of GWT, you should also update this DTD reference,
  so that your app can take advantage of the latest GWT module capabilities.
-->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.5.1//EN"
  "http://google-web-toolkit.googlecode.com/svn/tags/2.5.1/distro-source/core/src/gwt-module.dtd">
<module rename-to='xholon'>

  <!-- KSW added the following Jan 12, 2014; compiler chokes on it -->
  <!--<set-configuration-property name="compiler.useSourceMaps" value="true"></set-configuration-property>-->
  
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <inherits name='com.google.gwt.user.theme.clean.Clean'/>
  <!-- <inherits name='com.google.gwt.user.theme.standard.Standard'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

  <!-- Other module inherits                                      -->
  <!--<inherits name="com.google.gwt.logging.Logging"/>-->
  <!--<inherits name="org.apache.log4j.Log4j" />-->
  <inherits name="com.google.gwt.xml.XML" />
  <inherits name="com.google.gwt.http.HTTP" />
  <inherits name="com.google.gwt.resources.Resources" />
  <inherits name="com.google.gwt.json.JSON" />
  <inherits name='org.primordion' />
  
  <!-- Specify the app entry point class.                         -->
  <entry-point class='org.client.Xholon'/>

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='shared'/>
  
  <generate-with class="org.server.AppGenerator">
    <when-type-assignable class="org.primordion.xholon.app.Application" />
    <!--<when-property-is name="user.agent" value="safari" />-->
    <!--<when-property-is name="user.agent" value="gecko1_8" />-->
    <!--<when-property-is name="user.agent" value="opera" />-->
  </generate-with>
  
  <generate-with class="org.server.ExternalFormatServiceGenerator">
    <when-type-assignable class="org.primordion.xholon.service.ExternalFormatService" />
  </generate-with>

</module>
