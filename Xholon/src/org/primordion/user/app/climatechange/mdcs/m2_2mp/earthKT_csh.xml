<?xml version="1.0" encoding="UTF-8"?>
<!-- K+T version -->
<Earth>
  <TopOfAtmosphere>
    <Albedo>0.0</Albedo> <!-- for use with Robinson STELLA approach -->
  </TopOfAtmosphere>
  <Atmosphere>
    <Energy units="J"/>
    <Albedo>0.225</Albedo> <!-- 77/342 = 0.225146198 K+T -->
    <Temperature units="K">273.15
      <Celsius roleName="Ta"/>
    </Temperature> <!-- initial temperature -->
    <Mass units="kg/m^2">10326.19776</Mass> <!-- 101300/9.81 -->
    <SpecificHeat units="J/kg/K">1004.0</SpecificHeat>
    <HeatCapacity units="J/m^3/K"/>
    <Absorption>0.253</Absorption> <!-- 67/(342-77) = 0.252830188 K+T -->
    <Emissivity>0.75</Emissivity>
  </Atmosphere>
  <Surface>
    <Energy units="J"/>
    <Albedo>0.15</Albedo> <!-- 30/198 = 0.1515 K+T -->
    <Temperature units="K">273.15
      <Celsius roleName="Ts"/>
    </Temperature> <!-- initial temperature -->
    <Water>
      <Density units="kg/m^3">1000.0</Density>
      <SpecificHeat units="J/kg/K">4218.0</SpecificHeat>
      <MixedLayer>
        <Depth units="m">50.0</Depth>
      </MixedLayer>
      <HeatCapacity units="J/m^3/K"/>
    </Water>
  </Surface>
</Earth>
